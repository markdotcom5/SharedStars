<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { title: 'Dashboard' }) %>
  <head>
    <!-- Security headers and asset links -->
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline'">
    <link rel="stylesheet" href="/css/dashboard.css">
  </head>
  <body>
    <header class="main-header">
      <nav role="navigation" aria-label="Main navigation">
        <div class="nav-container">
          <div class="logo">
            <img src="/images/logo.png" alt="StelTrek Logo" width="50" height="50">
          </div>
          <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/training">Training</a></li>
            <li><a href="/leaderboard">Leaderboard</a></li>
            <li><a href="/dashboard" aria-current="page">Dashboard</a></li>
          </ul>
          <button id="logout-btn" class="logout-button">Log Out</button>
        </div>
      </nav>
    </header>

    <main id="main-content" class="dashboard-main">
      <div class="dashboard-grid">
        <!-- Progress Section -->
        <section class="dashboard-card progress-card">
          <h2>Training Progress</h2>
          <div class="progress-container">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
              <div class="progress-fill"></div>
            </div>
            <span class="progress-text">0%</span>
          </div>
        </section>

        <!-- Stats Section -->
        <section class="dashboard-card stats-card">
          <h2>Your Stats</h2>
          <div class="stats-grid">
            <div class="stat-item">
              <span class="stat-label">Rank</span>
              <span id="user-rank" class="stat-value">--</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Score</span>
              <span id="user-score" class="stat-value">0</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Missions</span>
              <span id="missions-completed" class="stat-value">0</span>
            </div>
          </div>
        </section>

        <!-- Achievements Section -->
        <section class="dashboard-card achievements-card">
          <h2>Recent Achievements</h2>
          <ul id="achievements-list" class="achievements-list">
            <li class="achievement-placeholder">Loading achievements...</li>
          </ul>
        </section>

        <!-- Next Mission Section -->
        <section class="dashboard-card mission-card">
          <h2>Next Mission</h2>
          <div id="next-mission" class="mission-details">
            <p class="mission-loading">Loading next mission...</p>
          </div>
        </section>
      </div>
    </main>

    <footer class="main-footer">
      <p>&copy; 2025 StelTrek Academy. All rights reserved.</p>
    </footer>

    <!-- Client-side Script -->
    <script src="/js/dashboard.js" defer></script>
  </body>
</html>
